<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title"><strong>Sign Up</strong></h5>
  </div>
  <form class="create-update-form" action="/users/create" method="POST">
    <div class="form-group">
      <label for="un">Name:</label>
      <input type="text" id="un" name="name">
    </div>
    <div class="form-group">
      <label for="phone">Phone:</label>
      <input type="text" id="phone" name="phone">
    </div>
    <div class="form-group">
      <label for="add">Address:</label>
      <input type="text" id="add" name="address">
    </div>

    <div class="form-group">
      <label for="em">Email:</label>
      <input type="email" id="em" name="email">
    </div>

    <div class="form-group">
      <label for="pass">Password:</label>
      <input type="password" id="pass" name="password">
    </div>

    <div class="modal-footer">
            <button class="btn btn-md btn-success" type="submit">Sign Up</button>
    </div>
  </form>
</div>
