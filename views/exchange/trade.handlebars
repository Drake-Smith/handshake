<div class="container">
   {{!--  Add Product Form --}}
    <div class="row">

        <div class="col col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Marketplace</h3>
                </div>
                <div class="panel-body">
                    {{#each products}}       
                        <div class="product col col-lg-3">
                             <ul>
                                <li>
                                Item: {{this.name}}
                                </li>
                                <li>
                                Category: {{this.category}}
                                </li>
                                <li>
                                 Description: {{this.description}}
                                 </li>
                                 <li>
                                 Condition: {{this.condition}}
                                 </li>
                                 <li>
                                 Value: {{this.value}}
                                 </li>
                                 <li>
                                 Picture: {{this.picture}}
                                </li>
                            </ul>
                        </div>
                        <div class="col-xs-3 text-center">
                            <form method="POST" action="/exchange/{{this.id}}" class="button-size">
                                <input input type="hidden" type="text" name="product_id" value={{this.id}}><br>
                                <button type="submit" class="btn btn-default">Offer Trade!</button>
                            </form>
                        </div>      
                    {{/each}}
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
