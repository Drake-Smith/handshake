{{#if logged_in}}
<div class="fullscreen-bg">
    <video id="bgVideo" preload="true" autoplay loop muted>
        <source src="assets/video/Shop.mp4" type="video/mp4">
    </video>
</div>

<div class="container">
    {{!--  Add Product Form --}}
    <div class="jumbotron jumbo-market">
        <div class="row">

        {{!-- <div class="col col-sm-12"> --}}
            <div class="col col-sm-12">
             {{!--    <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Marketplace</h3>
                    </div> --}}
                    <h1 class="text-center" id="market-font">Marketplace</h1>
                    {{!-- <div class="panel-body"> --}}

                        <form method="POST" action="request/{{this.id}}?_method=PUT" class="button-size" id="requestForm">
                        <div class="fuck">
                            {{#each market_products}}       
                                    
                                        <div class="each-product">
                                             <img class="product-img" src="{{this.picture}}" style="width: 200px; height: 200px;">
                                             <br>
                                             <span>Select This Item       <input type="radio" name="request" value={{this.id}} data-user={{this.user_id}} data-id={{this.id}}></span>
                                             {{!-- <div class="product-info" style="display: none"> --}}
                                             <div class="product-info">
                                                <p>{{this.name}}</p>
                                                <p>Category: {{this.category}}</p>
                                                <p>Condition: {{this.condition}}</p>
                                                <p>Value: ${{this.value}}</p>
                                            </div>
                                        </div>
                                    
                            {{/each}}
                        </div>
                        </form>
                    {{!-- </div> --}}
                {{!-- </div> --}}
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-12">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">My Items</h3>
                    </div>
                    <div class="panel-body">

                        <form method="POST" action="offer/{{this.id}}?_method=PUT" class="button-size" id="offerForm">
                            {{#each owner_products}}      

                            <div class="each-user-own-product">
                                <img class="product-img"src="{{this.picture}}" style="width: 200px; height: 200px;">
                                <br>
                                <span>Select This Item       <input type="radio" name="offer" value={{this.id}} data-user={{this.user_id}} data-id={{this.id}}></span>
                                {{!-- <div class="product-info" style="display: none"> --}}
                                <div class="product-info">
                                    <p>{{this.name}}</p>
                                    <p>Category: {{this.category}}</p>
                                    <p>Condition: {{this.condition}}</p>
                                    <p>Value: ${{this.value}}</p>
                                </div>

                            </div>

                                    
                                            
    {{!--                                         <button type="submit" class="btn btn-default">Offer Trade</button> --}}
                                    
                            {{/each}}
                        </form>
                    </div>
                </div>
            </div>


             <div class="col-sm-4">
                <h4>Add a Product</h4>

                <form class="create-update-form" action="/add" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="product-name" name="name">
                    </div>

                    <div class="form-group">
                        <label for="cateogry">Category</label>
                        {{!-- <input type="text" id="category" name="category"> --}}
                        <select data-placeholder="" class="chosen-select form-control" id="category" name="category"> 
                            <option value="" disabled selected hidden>Select Category</option>
                            <option value="electronics">Electronics</option>
                            <option value="misc">Misc</option>
                            <option value="home">Home</option>
                            <option value="sports">Sports</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description">
                    </div>

                    <div class="form-group">
                        <label for="condition">Condition</label>
                        <select data-placeholder="" class="chosen-select form-control" id="condition" name="condition">
                            <option value="" disabled selected hidden>Select Condition</option>
                            <option value="new">New</option>
                            <option value="likenew">Like New</option>
                            <option value="home">Good</option>
                            <option value="sports">Used</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="value">Estimated Value $</label>
                        <input type="text" id="value" name="value">
                    </div>

                    <div class="form-group">
                        <label for="picture">Add Picture URL</label>
                        <input type="text" id="pic" name="picture">
                    </div>

                    <button type="submit" class="btn btn-primary">Add Item</button>
                </form>
            </div>
        </div>
    
            <div class="row">
                <div class="col col-sm-12">
                    <button class="btn btn-success" id="tradeConfirm">Confirm Trade Request</button>
                </div>
            </div>         

        <div class="row">
            <div class="col col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Items Traded</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            {{#each product}}
                                    <div class="product col col-lg-6">
                                        <div class="well">
                            
                                        </div>
                                    </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
{{/if}}
